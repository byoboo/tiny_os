[build]
target = "aarch64-unknown-none"

[profile.dev]
panic = "abort"

[profile.release]
panic = "abort"

# Completely disable test profile to prevent test crate issues
[profile.test]
inherits = "dev"
panic = "abort"

# Force no test compilation
[env]
CARGO_BUILD_TARGET = "aarch64-unknown-none"
RUSTFLAGS = "-C link-arg=-Tlinker.ld"

# Disable test harness completely
[target.aarch64-unknown-none]
runner = ["echo", "Tests are not supported"]
rustflags = ["-C", "link-arg=-Tlinker.ld"]
